

<h1>Customers</h1>

<div id="customers">
   <table class='table table-info table-responsive table-bordered table-hover'>
    <tr >
      <th>Icon</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>No of Orders</th>
      <th colspan="3"></th>
  <% @customers.each do |customer| %>
    <%= render customer %>
  <br />
  <% end %>
   </table>
</div>

