<div class="card border border-2 border-success p-3" style="width: 18rem;">
  <div class="card-body">
    <h1 class="card-title"><%= @order.product_name %></h1>
    <p class="card-text">Product Count: <%= @order.product_count %></p>
    <p class="card-text">Customer: <%= @order.customer.full_name %></p>
  </div>
  <div class="card-footer d-flex flex-column gap-2">
    <%= link_to "Edit this order", edit_order_path(@order), class: 'btn btn-warning w-full' %>
    <%= button_to "Delete this order", @order, method: :delete, class: 'btn btn-danger w-full', data: { turbo_confirm: 'Are you sure?' } %>
  </div>
</div>
